{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#cba6f7",
    "template": "❯ "
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#cdd6f4",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}}"
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "#f5c2e7",
          "template": " {{ .UserName }}@{{ .HostName }}"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#b4befe",
          "template": " in {{ .Path }}",
          "properties": {
            "style": "mixed"
          }
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "#f38ba8",
          "template": " {{ if gt .Code 0 }}✗ {{ .Code }}{{ end }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "docker",
          "style": "plain",
          "foreground": "#89b4fa",
          "template": "󰡨 {{ .Context }} "
        },
        {
          "type": "kubectl",
          "style": "plain",
          "foreground": "#cba6f7",
          "template": "☸ {{.Context}}{{if .Namespace}}:{{.Namespace}}{{ end }} "
        },
        {
          "type": "git",
          "style": "plain",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} <#f38ba8>\uf044 {{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} <#a6e3a1>\uf046 {{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }} <#f9e2af>\ueb4b {{ .StashCount }}</>{{ end }} ",
          "foreground": "#94e2d5"
        },
        {
          "type": "az",
          "style": "plain",
          "foreground": "#89b4fa",
          "template": "ﴃ {{ .Name }} "
        },
        {
          "type": "gcp",
          "style": "plain",
          "foreground": "#f9e2af",
          "template": " {{ .Project }} "
        },
        {
          "type": "aws",
          "style": "plain",
          "foreground": "#fab387",
          "template": " {{ .Profile }}{{ if .Region }}@{{ .Region }}{{ end }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#a6e3a1",
          "template": "❯"
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#fab387",
          "template": "took {{ .FormattedMs }} ",
          "properties": {
            "threshold": 100
          }
        }
      ]
    }
  ]
}
